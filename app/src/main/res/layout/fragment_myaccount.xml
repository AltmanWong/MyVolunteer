<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:id="@+id/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="20dp"
        android:text = "Cheung FONG"
        android:id = "@+id/name"
        android:textColor="#000000"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="48dp"
        android:id = "@+id/organization"
        android:text = "LapLap Home"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/contacttextview"
        android:text = "CONTACT"
        android:textSize="16dp"
        android:textColor="#3F51B5"
        android:layout_below="@+id/icon"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon" />

    <View
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_alignBottom="@+id/contacttextview"
        android:background="#3F51B5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactleft"
        android:text = "template"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:textSize="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/situationright"
        android:text = "template"
        android:textSize="24dp"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/questissuetextview"
        android:text = "QUEST ISSUED"
        android:textSize="16dp"
        android:textColor="#3F51B5"
        android:layout_below="@+id/situationright"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon" />

    <View
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_alignBottom="@+id/questissuetextview"
        android:background="#3F51B5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/issueleft"
        android:text = "template"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsright"
        android:text = "template"
        android:textSize="24dp"
        android:layout_below="@+id/view2"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/questaccepttextview"
        android:text = "QUEST ACCEPTED"
        android:textSize="16dp"
        android:textColor="#3F51B5"
        android:layout_below="@+id/detailsright"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon" />

    <View
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_alignBottom="@+id/questaccepttextview"
        android:background="#3F51B5"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/view3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:text = "template"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acceptright"
        android:text = "template"
        android:textSize="24dp"
        android:layout_below="@+id/view3"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

</RelativeLayout>